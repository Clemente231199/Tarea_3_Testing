# Ignore bundler config.
.bundle

# Ignore the default SQLite database.
db/*.sqlite3
db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
log/*
tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
tmp/pids/*
!tmp/pids/
tmp/pids/*.pid

# Ignore cache files.
tmp/cache/
tmp/cache/assets/sprockets/*
tmp/cache/assets/webpacker/*
public/assets
public/packs
public/packs-test

# Ignore storage directory.
storage/*
!/storage/.keep

# Ignore the node_modules directory.
node_modules/

# Ignore yarn files.
yarn-debug.log*
.yarn-integrity

# Ignore Byebug command history file.
.byebug_history

# Ignore the coverage directory generated by tools like SimpleCov.
coverage/
!.simplecov

# Ignore Capistrano deploy artifacts.
.capistrano/

# Ignore other artifacts.
*.rbc
*.sassc

# Ignore dotenv environment variable files.
.env
.env.*

# Ignore dump files.
*.sql
*.sqlite3
*.sqlite3-journal

# Ignore macOS specific files.
*.DS_Store

# Ignore Vim swap files.
*.swp

# Ignore specific editor files.
.idea/
.vscode/

# Ignore Rails master key.
config/master.key

# Ignore Spring log.
spring/*.pid
spring/*.state

# Ignore secrets.yml if used.
config/secrets.yml

# Ignore database configuration.
config/database.yml

# Ignore temporary files from bundler.
vendor/bundle

# Ignore screenshots generated by Rails system tests.
tmp/screenshots

# Ignore files from system tests
tmp/pids
tmp/cache
tmp/sockets

# Ignore webpacker compilation files
public/packs
public/packs-test
